{
  "manifest_version": 2,
  "name": "{{envBadge}}Vigvam â€” Web3 Wallet",
  "version": "{{pkg.version}}",

  "icons": {
    "16": "icons/16.png",
    "24": "icons/24.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "description": "__MSG_appDesc__",
  "homepage_url": "{{website}}",
  "short_name": "Vigvam",

  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' 'sha256-a4v4czp2qnmr595pGYlZ07gEumM6d9R5qGz9t8CjuUE='; object-src 'self'",

  "__chrome|firefox__author": "{{website}}",
  "__opera__developer": {
    "name": "{{website}}"
  },

  "__firefox__applications": {
    "gecko": { "id": "{daf44bf7-a45e-4450-979c-91cf07434c3d}" }
  },

  "__chrome__minimum_chrome_version": "73",
  "__opera__minimum_opera_version": "60",

  "default_locale": "en",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Vigvam",
    "default_icon": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  },

  "background": {
    "page": "back.html",
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["{{website}}/*"],
      "js": ["scripts/version.js"]
    }
  ],

  "web_accessible_resources": ["scripts/inpage.js"]
}
